<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @golfclubs.each do |golfclub| %>
<div>
  <%= link_to golfclub_path(golfclub.id) do %>
    <%= image_tag golfclub.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag golfclub.user.get_profile_image(100,100) %></p>
  <p>ショップ名：<%= golfclub.shop_name %></p>
  <p>説明：<%= golfclub.caption %></p>
  <p>ユーザーネーム：<%= golfclubs.user.name %></p>
</div>
<% end %>